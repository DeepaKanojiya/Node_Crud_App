<%- include('layout/header') %>



<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if (message) { %>
                <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                    <strong><%= message.message %></strong>
                </div>
            <% } %>
             
            <div class="container">
                <div class="row my-4">
                    <div class="col-lg-12">
                        <div class="table-responsive">
                <% if (users!='') { %>
                    <table class="table table-striped text-center my-3">
                        <thead>
                            <tr class="table-dark">
                                <th style="text-align: center;">ID</th>
                                <th style="text-align: center;">Image</th>
                                <th style="text-align: center;">Name</th>
                                <th style="text-align: center;">E-mail</th>
                                <th style="text-align: center;">Phone</th>
                                <th style="text-align: center;">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach((row,index) => { %>
                                <tr class="align-middle">
                                    <td style="text-align: center;"><%= index %></td>
                                    <td style="text-align: center;"><img src="<%= row.image %>" width="50" class="img-thumbnail" /></td>
                                    <td style="text-align: center;"><%= row.name %></td>
                                    <td style="text-align: center;"><%= row.email %></td>
                                    <td style="text-align: center;"><%= row.phone %></td>
                                    <td style="text-align: center;">
                                    <a href="/edit/<%= row.id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                    <a href="/delete/<%= row.id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                    </td>
                                    </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } else {%>
                    <h1 class="text-center text-secondary mt-5">No users found in database!</h1>
                    <% } %>
                
            </div>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
</div>

<%- include('layout/footer') %>
